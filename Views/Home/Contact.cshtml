    <h4 class="muted">@ViewBag.Message</h4>

    <address>
        Calle Principal 123<br />
        Ciudad, País<br />
        <abbr title="Teléfono">T:</abbr> 555-123-456
    </address>

    <address>
        <strong>Soporte:</strong> <a href="mailto:soporte@douglas.example">soporte@douglas.example</a><br />
        <strong>Ventas:</strong> <a href="mailto:ventas@douglas.example">ventas@douglas.example</a>
