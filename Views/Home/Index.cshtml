@{
    ViewBag.Title = "Inicio";
}

<main>
    <section class="row" aria-labelledby="welcomeTitle">
        <h1 id="welcomeTitle">Bienvenido a Ferretería Douglas</h1>
        <p class="lead">Gestiona clientes, productos y facturas de forma rápida y segura.</p>
        <p><a href="@Url.Action("Index","Clientes")" class="btn btn-primary btn-md">Ir a Clientes &raquo;</a></p>
    </section>

    <div class="row mt-3">
        <section class="col-md-8" aria-labelledby="quickPanelTitle">
            <h2 id="quickPanelTitle">Panel rápido</h2>
            <p class="muted">Resumen de las últimas entidades creadas y acciones rápidas.</p>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Nombre</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="row-highlight">
                        <td>Cliente</td>
                        <td>Comercial S.A.</td>
                        <td>@DateTime.Now.AddDays(-2).ToString("dd/MM/yyyy")</td>
                        <td>
                            @Html.ActionLink("Ver","Details","Clientes", new { id = 1 }, new { @class = "btn btn-sm btn-outline-dark" })
                            &nbsp;
                            @Html.ActionLink("Editar","Edit","Clientes", new { id = 1 }, new { @class = "btn btn-sm btn-primary" })
                        </td>
                    </tr>
                    <tr>
                        <td>Producto</td>
                        <td>Tornillo 3/4"</td>
                        <td>@DateTime.Now.AddDays(-5).ToString("dd/MM/yyyy")</td>
                        <td>
                            @Html.ActionLink("Ver","Details","Productoes", new { id = 1 }, new { @class = "btn btn-sm btn-outline-dark" })
                            &nbsp;
                            @Html.ActionLink("Añadir a factura","Create","DatosFacturas", new { productId = 1 }, new { @class = "btn btn-sm btn-primary" })
                        </td>
                    </tr>
                    <tr class="row-muted">
                        <td>Factura</td>
                        <td>F-2026-001</td>
                        <td>@DateTime.Now.AddDays(-1).ToString("dd/MM/yyyy")</td>
                        <td>
                            @Html.ActionLink("Ver","Details","Facturas", new { id = 1 }, new { @class = "btn btn-sm btn-outline-dark" })
                            &nbsp;
                            @Html.ActionLink("Imprimir","Details","Facturas", new { id = 1, print = true }, new { @class = "btn btn-sm btn-primary" })
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>

        <aside class="col-md-4">
            <h3>Acciones rápidas</h3>
            <div class="card">
                <p>
                    @Html.ActionLink("Nuevo cliente","Create","Clientes", null, new { @class = "btn btn-block btn-primary" })
                </p>
                <p>
                    @Html.ActionLink("Nuevo producto","Create","Productoes", null, new { @class = "btn btn-block btn-primary" })
                </p>
                <p>
                    @Html.ActionLink("Nueva factura","Create","Facturas", null, new { @class = "btn btn-block btn-primary" })
                </p>
            </div>
        </aside>
    </div>
</main>
@{
    ViewBag.Title = "Home Page";
}
