<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/site-improved.css" />
    <title>@ViewBag.Title - Ferretería Douglas</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="site-bg">
    <header class="site-header shadow-sm">
        <div class="container-fluid header-inner">
            <a class="brand" href="@Url.Action("Index", "Home")">
                <img src="~/Content/images/Logo.jpeg" alt="Douglas Ferretería" class="brand-logo" height="56">
                <span class="brand-title">Douglas</span>
                <small class="brand-sub">Ferretería y suministros</small>
            </a>

            <nav class="main-nav" aria-label="Navegación principal">
                <ul class="nav-list">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Acerca", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Clientes", "Index", "Clientes", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Productos", "Index", "Productoes", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Facturas", "Index", "Facturas", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Detalle Facturas", "Index", "DetalleFacturas", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </nav>

            <div class="header-actions">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </header>

    <main class="container main-content" role="main">
+        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container footer-inner">
            <div class="footer-left">&copy; @DateTime.Now.Year Ferretería Douglas</div>
            <div class="footer-right">Contacto: <a href="mailto:info@douglas.example">info@douglas.example</a></div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
+    @Scripts.Render("~/bundles/bootstrap")
+    @RenderSection("scripts", required: false)
</body>
</html>
