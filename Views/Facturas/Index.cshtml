@model IEnumerable<FacturaDouglas.Models.Factura>

@{
    ViewBag.Title = "Facturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Facturas</h2>
    <div class="toolbar space-between">
        <div>
            @Html.ActionLink("Nueva factura", "Create", null, new { @class = "btn btn-primary" })
        </div>
        <div>
            @using (Html.BeginForm("Index", "Facturas", FormMethod.Get, new { @class = "search-form" }))
            {
                <input type="search" name="q" placeholder="Buscar facturas..." class="form-control" style="display:inline-block;width:220px;" />
                <button class="btn btn-outline-dark btn-sm" type="submit">Buscar</button>
            }
        </div>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nº Factura</th>
            <th>Fecha</th>
            <th>Vencimiento</th>
            <th>Subtotal</th>
            <th>Impuestos</th>
            <th>Descuentos</th>
            <th>Total</th>
            <th>Estado</th>
            <th>Método</th>
            <th>Cliente</th>
            <th>Creado</th>
            <th>Modificado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        var rowClass = item.estado != null && item.estado.ToString().ToLower().Contains("pendiente") ? "row-highlight" : "";
        <tr class="@rowClass">
            <td>@Html.DisplayFor(modelItem => item.numero_factura)</td>
            <td>@Html.DisplayFor(modelItem => item.fecha_factura)</td>
            <td>@Html.DisplayFor(modelItem => item.fecha_vencimiento)</td>
            <td>@String.Format("{0:C}", item.subtotal)</td>
            <td>@String.Format("{0:C}", item.total_impuestos)</td>
            <td>@String.Format("{0:C}", item.total_descuentos)</td>
            <td>@String.Format("{0:C}", item.total)</td>
            <td>@Html.DisplayFor(modelItem => item.estado)</td>
            <td>@Html.DisplayFor(modelItem => item.metodo_pago)</td>
            <td>@Html.DisplayFor(modelItem => item.Cliente.nombre_razon_social)</td>
            <td>@Html.DisplayFor(modelItem => item.fecha_creacion)</td>
            <td>@Html.DisplayFor(modelItem => item.fecha_modificacion)</td>
            <td>
                @Html.ActionLink("Ver", "Details", new { id = item.id_factura }, new { @class = "btn btn-sm btn-outline-dark" })
                @Html.Raw("&nbsp;")
                @Html.ActionLink("Editar", "Edit", new { id = item.id_factura }, new { @class = "btn btn-sm btn-primary" })
                @Html.Raw("&nbsp;")
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id_factura }, new { @class = "btn btn-sm btn-outline-dark" })
                @Html.Raw("&nbsp;")
            </td>
        </tr>
    }
    </tbody>
</table>
